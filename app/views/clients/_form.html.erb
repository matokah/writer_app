<div class="col-md-6">
	<h1 style="color:#cc3333;">Create New Client</h1>

	<div class="well">
	<%= simple_form_for(@client, html: {:class => 'form-horizontal'} ) do |f| %>

	<p><%= f.input :name, input_html: {:class => 'form-control', placeholder: 'Client Name'} %></p>

	<div style="text-align:center;">
	<p><%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-danger' %></p>
	</div>

	<% end %>
</div>
</div>