<div class="col-md-6">
	

	<div class="well">
	<%= simple_form_for(@post, html: {:class => 'form-horizontal'} ) do |f| %>

	<p><%= f.association :client, collection: just_your_clients(current_user), label: false , prompt: 'Select Client', input_html: {:class => 'form-control'} %></p>

	<p><%= f.input :title, label: false, input_html: {:class => 'form-control', placeholder: 'Blog Post Title'} %></p>

	<p><%= f.input :submission_date, label: false, input_html: {:class => 'form-control', placeholder: 'Submission Date'} %> </p>

	<p><%= f.input :period, collection: post_periods, prompt: 'Select Month', label:false, input_html: {:class => 'form-control'}  %></p>

	<div style="text-align:center;">
	<p><%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-danger' %></p>
	</div>

	<% end %>
</div>
</div>