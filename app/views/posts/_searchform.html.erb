<div class="col-md-6">
  

  <div class="well">
  <%= simple_form_for(@post, :url=> post_period_search_path, html: {:class => 'form-horizontal'} ) do |f| %>

  <p><%= f.input :period, collection: post_periods, prompt: 'Select Month', label:false, input_html: {:class => 'form-control'}  %></p>

  <div style="text-align:center;">
  <p><%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-danger' %></p>
  </div>

  <% end %>
</div>
</div>